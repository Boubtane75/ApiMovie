
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/login.css') }}">
{% endblock %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <div class="containerFormulaire m-5" style="border-radius: 60px;
background: linear-gradient(145deg, #b0cbe6, #d2f1ff);
box-shadow:  8px 8px 16px #8599ad,
             -8px -8px 16px #ffffff;">
    <div class="box">
        <h1 class="container text-center">Connexion</h1>
        {% if error %}
    <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata,'security') }}</div>
    {% endif %}

        <form class="formulaire  d-flex align-items-center flex-column" action="{{ path('security_login') }}" method="post">
            <div class="form-group mt-4" style="width: 40% ;">
                <input type="text" placeholder="Adresse email" required name="_username" class="form-control" style="border-radius: 60px">
            </div>
            <div class="form-group" style="width: 40%;">
                <input type="password" placeholder="Mot de passe" required name="_password" class="form-control" style="border-radius: 60px">
            </div>
            <div class="form-group">
                <p>Si vous n'avez pas de compte <a href="{{ path('security_registration') }}">cliquez ici</a></p>
            </div>
            <div class="form-group ">
                <button type="submit" class="btn btn-info">connexion</button>
            </div>
        </form>
        </div>
    </div>
{% endblock %}
